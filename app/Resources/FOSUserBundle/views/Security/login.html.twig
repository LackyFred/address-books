{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block title %}{{ 'security.login.submit'|trans({},'FOSUserBundle') }}{% endblock %}
{% block fos_user_content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div id="log">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="{{ path('fos_user_security_login') }}" class="active" id="login-form-link">{{ 'security.login.submit'|trans }}</a>
                            </div>
                            <div class="col-xs-6">
                                <a href="{{ path('fos_user_registration_register') }}" id="register-form-link">{{ 'layout.register'|trans }}</a>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form action="{{ path("fos_user_security_check") }}" method="post" style="display: block;">
                                    {% if error %}
                                        <div class="alert alert-dismissible alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    <div class="form-group">
                                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'security.login.username'|trans }}" required="required" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" name="_password" required="required" />
                                    </div>
                                    <div class="form-group text-center">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" id="_submit" name="_submit" class="form-control btn btn-login" value="{{ 'security.login.submit'|trans }}" />
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
