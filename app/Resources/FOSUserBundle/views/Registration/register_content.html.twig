{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div id="log">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="{{ path('fos_user_security_login') }}" id="login-form-link">{{ 'security.login.submit'|trans }}</a>
                            </div>
                            <div class="col-xs-6">
                                <a href="{{ path('fos_user_registration_register') }}" class="active" id="register-form-link">{{ 'layout.register'|trans }}</a>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                                {% if not form.vars.valid %}
                                    <div class="alert alert-dismissible alert-danger">
                                        {%if form_errors(form.email) is not empty  %}
                                            <p>{{ form_errors(form.email) }}</p>
                                        {% endif %}
                                        {%if form_errors(form.username) is not empty  %}
                                            <p>{{ form_errors(form.username) }}</p>
                                        {% endif %}
                                        {%if form_errors(form.name) is not empty  %}
                                            <p>{{ form_errors(form.name) }}</p>
                                        {% endif %}
                                        {%if form_errors(form.surname) is not empty  %}
                                            <p>{{ form_errors(form.surname) }}</p>
                                        {% endif %}
                                        {%if form_errors(form.phone) is not empty  %}
                                            <p>{{ form_errors(form.phone) }}</p>
                                        {% endif %}
                                        {%if form_errors(form.address) is not empty  %}
                                            <p>{{ form_errors(form.address) }}</p>
                                        {% endif %}
                                        {%if form_errors(form.website) is not empty  %}
                                            <p>{{ form_errors(form.website) }}</p>
                                        {% endif %}
                                        {% if form_errors(form.plainPassword.first) is not empty  %}
                                            <p>{{ form_errors(form.plainPassword.first) }}</p>
                                        {% endif %}
                                        {%if form_errors(form.plainPassword.second) is not empty  %}
                                            <p>{{ form_errors(form.plainPassword.second) }}</p>
                                        {% endif %}
                                    </div>
                                {% endif %}
                                <div class="form-group">
                                    {{ form_widget(form.email,{'attr': {'class': 'form-control','placeholder': 'form.email'|trans}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.username,{'attr': {'class': 'form-control','placeholder':'form.username'|trans}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.name,{'attr': {'class': 'form-control','placeholder':'form.name'|trans({},'AppBundle')}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.surname,{'attr': {'class': 'form-control','placeholder':'form.surname'|trans({},'AppBundle')}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.phone,{'attr': {'class': 'form-control','placeholder':'form.phone'|trans({},'AppBundle')}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.address,{'attr': {'class': 'form-control','placeholder':'form.address'|trans({},'AppBundle')}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.website,{'attr': {'class': 'form-control','placeholder':'form.website'|trans({},'AppBundle')~' '~'form.required'|trans({},'AppBundle')}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.first,{'attr': {'class': 'form-control','placeholder':'form.password'|trans}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control','placeholder':'form.password_confirmation'|trans}}) }}
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="form-control btn btn-register" value="{{ 'registration.submit'|trans }}" />
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


